<div class="main">
    <div class="top-row px-5">
        <div class="col-12 row">
            <table border="0" cellspacing="2">
                <tr>
                    <td nowrap>
                        <span style="font-weight:bold">Enter URL or *:</span>
                        <span>&nbsp&nbsp&nbsp&nbsp</span>
                    </td>
                    <td nowrap>
                        @{
                            string text = "";
                            int ww = 80;
                            <input size="@ww" value="@text"
                                   @onchange="@((ChangeEventArgs __e) => MyTextInput(__e.Value.ToString()))" />
                        }
                        @code {
                            private async void MyTextInput(string value)
                            {
                                try
                                {
                                    value = value.ToLower();
                                    if (value != "" && (value.Contains("http://") || value.Contains("https://")))
                                    {
                                        if (value.Contains("getaasx"))
                                        {
                                            await InvokeAsync(async () => await Program.getAasxAsync(BlazorUI.Pages.Index.bi, value));
                                        }
                                        else // repo
                                        {
                                            string fn = value;
                                            var fr = PackageContainerListFactory.GuessAndCreateNew(fn);
                                            // Program._packageCentral.Repositories.Add(fr);
                                            BlazorUI.Pages.Index.bi.repository = fr as PackageContainerListHttpRestRepository;
                                            var task = Task.Run(async () => await BlazorUI.Pages.Index.bi.repository.SyncronizeFromServerAsync());
                                            var r = task.Result;
                                            if (BlazorUI.Pages.Index.bi.repository.FileMap.Count > 0)
                                            {
                                                BlazorUI.Pages.Index.bi.aasxFiles = new string[BlazorUI.Pages.Index.bi.repository.FileMap.Count];
                                                for (int i = 0; i < BlazorUI.Pages.Index.bi.repository.FileMap.Count; i++)
                                                {
                                                    BlazorUI.Pages.Index.bi.aasxFiles[i] = BlazorUI.Pages.Index.bi.repository.FileMap[i].InfoIds;
                                                }
                                                var repoFile = BlazorUI.Pages.Index.bi.repository.FileMap[0];
                                                BlazorUI.Pages.Index.bi.container = PackageContainerFactory.GuessAndCreateFor(BlazorUI.Pages.Index.bi._packageCentral, repoFile.InfoLocation, repoFile.InfoLocation, overrideLoadResident: true);
                                                BlazorUI.Pages.Index.bi.env = BlazorUI.Pages.Index.bi.container.Env;
                                                BlazorUI.Pages.Index.bi.aasxFileSelected = "";
                                                BlazorUI.Pages.Index.bi.editMode = false;
                                                BlazorUI.Pages.Index.bi.thumbNail = null;
                                                Program.signalNewData(3);
                                            }
                                        }
                                    }
                                    if (value == "*" || value == "*.*")
                                    {
                                        BlazorUI.Pages.Index.bi.repository = null;
                                        await InvokeAsync(() => Program.loadAasxFiles(BlazorUI.Pages.Index.bi, true));
                                    }
                                }
                                catch
                                {
                                }
                                this.StateHasChanged();
                            }
                        }
                        <span>&nbsp&nbsp&nbsp&nbsp</span>
                    </td>
                    <td nowrap></td>
                    <td>
                        <button @onclick="toggleEditMode">
                            @{
                                if (BlazorUI.Pages.Index.bi.editMode)
                                {
                                    <span>EditMode is ON</span>
                                }
                                else
                                {
                                    <span>EditMode is OFF</span>
                                }
                                Program.signalNewData(0);
                            }
                        </button>
                        @code {
                            private void toggleEditMode()
                            {
                                BlazorUI.Pages.Index.bi.editMode = !BlazorUI.Pages.Index.bi.editMode;
                                this.StateHasChanged();
                            }
                        }
                        <span>&nbsp&nbsp&nbsp&nbsp</span>
                    </td>
                    <td nowrap>
                    </td>
                </tr>
                <tr>
                    <td nowrap>
                        <span style="font-weight:bold">Select:</span>
                        <span>&nbsp&nbsp&nbsp&nbsp</span>
                    </td>
                    <td nowrap>
                        @{

                            // string w = (BlazorUI.Pages.Index.bi.aasxFileSelected.Length * 11 + 60).ToString() + "px";
                            // w = "50%";
                            // string w = "70%"; style="width:@w" height:20px; line-height: 20px class="form-control selectpicker" display:inline-block
                            <select style="width:100%;max-width:100%;height:30px" value="@BlazorUI.Pages.Index.bi.aasxFileSelected"
                                    @onchange="@((ChangeEventArgs __e) => MyAasxSelect(__e.Value.ToString()))">
                                @foreach (var item in BlazorUI.Pages.Index.bi.aasxFiles)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            @code {
                                private async void MyAasxSelect(string value)
                                {
                                    try
                                    {
                                        if (BlazorUI.Pages.Index.bi.repository?.FileMap?.Count > 0)
                                        {
                                            for (int i = 0; i < BlazorUI.Pages.Index.bi.repository.FileMap.Count; i++)
                                            {
                                                if (value == BlazorUI.Pages.Index.bi.repository.FileMap[i].InfoIds)
                                                {
                                                    var repoFile = BlazorUI.Pages.Index.bi.repository.FileMap[i];
                                                    BlazorUI.Pages.Index.bi.container = PackageContainerFactory.GuessAndCreateFor(BlazorUI.Pages.Index.bi._packageCentral, repoFile.InfoLocation, repoFile.InfoLocation, overrideLoadResident: true);
                                                    BlazorUI.Pages.Index.bi.env = BlazorUI.Pages.Index.bi.container.Env;
                                                    BlazorUI.Pages.Index.bi.aasxFileSelected = "";
                                                    BlazorUI.Pages.Index.bi.editMode = false;
                                                    BlazorUI.Pages.Index.bi.thumbNail = null;
                                                    Program.signalNewData(3);
                                                }
                                            }
                                        }
                                        else if (BlazorUI.Pages.Index.bi.aasxFiles?.Length > 0)
                                        {
                                            await InvokeAsync(() => Program.loadAasx(BlazorUI.Pages.Index.bi, value));
                                        }
                                    }
                                    catch
                                    {
                                    }
                                    this.StateHasChanged();
                                }
                            }
                        }
                    </td>
                    <td nowrap>
                        <span>&nbsp&nbsp&nbsp&nbsp</span>
                        <span style="font-weight:bold">Upload:</span>
                    </td>
                    <td nowrap>
                        @*<a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
                        *@
                        <InputFile OnChange="HandleFileSelected" />
                        <span>&nbsp&nbsp&nbsp&nbsp</span>
                        @code {
                            // resharper disable once UnusedField.Compiler
                            IFileListEntry file;

                            async Task HandleFileSelected(IFileListEntry[] files)
                            {
                                var file = files.FirstOrDefault();
                                if (file != null)
                                {
                                    var fileStream = System.IO.File.Create(file.Name);
                                    await file.Data.CopyToAsync(fileStream);
                                    fileStream.Close();
                                    BlazorUI.Pages.Index.bi.repository = null;
                                    await InvokeAsync(() => Program.loadAasxFiles(BlazorUI.Pages.Index.bi, false));
                                    await InvokeAsync(() => Program.loadAasx(BlazorUI.Pages.Index.bi, file.Name));
                                    this.StateHasChanged();
                                }
                            }
                        }
                    </td>
                    <td nowrap>
                        <button @onclick="onSave">Save</button>
                        @*<span>&nbsp&nbsp&nbsp&nbsp</span>*@
                        @*<button href="/download">Download</button>*@
                        @*<a class="form-control btn btn-primary" href="/download" style="color:black;background-color:transparent;">Download</a>*@
                        <a class="button" href="/download">Download</a>
                        <span>&nbsp&nbsp&nbsp&nbsp</span>
                        @code {
                            private async void onSave()
                            {
                                try
                                {
                                    if (BlazorUI.Pages.Index.bi.repository?.FileMap?.Count > 0)
                                    {
                                        if (BlazorUI.Pages.Index.bi.container != null)
                                        {
                                            await InvokeAsync(() => BlazorUI.Pages.Index.bi.container.SaveToSourceAsync());
                                        }
                                    }
                                    else if (BlazorUI.Pages.Index.bi.aasxFiles?.Length > 0)
                                    {
                                        if (BlazorUI.Pages.Index.bi.aasxFileSelected != "")
                                        {
                                            BlazorUI.Pages.Index.bi.env.SaveAs(BlazorUI.Pages.Index.bi.aasxFileSelected);
                                        }
                                    }
                                }
                                catch
                                {
                                }
                                this.StateHasChanged();
                            }
                        }
